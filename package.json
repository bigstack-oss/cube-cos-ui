{
  "name": "@cube-frontend/root",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "cube frontend monorepo",
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9.5"
  },
  "scripts": {
    "tsc": "pnpm -r tsc",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "eslint:inspect": "eslint --inspect-config .eslintrc.js",
    "keycloak-login:build": "pnpm --filter @cube-frontend/keycloak-login build",
    "keycloak-login:copy-output": "rm -rf ./packages/cube-frontend-keycloak-login/keycloak/themes/cos-ui/login/resources && cp -r ./packages/cube-frontend-keycloak-login/dist/resources ./packages/cube-frontend-keycloak-login/keycloak/themes/cos-ui/login",
    "keycloak-login:dev": "pnpm --filter @cube-frontend/keycloak-login dev",
    "keycloak-login:infra": "docker compose -f ./packages/cube-frontend-keycloak-login/docker-compose.yaml up -d",
    "prettier": "prettier --check \"{**/*,*}.{js,ts,tsx,json,scss,md}\"",
    "prettier:fix": "prettier --write \"{**/*,*}.{js,ts,tsx,json,scss,md}\"",
    "format": "pnpm prettier:fix && pnpm eslint:fix",
    "lint": "pnpm tsc && pnpm eslint && pnpm prettier",
    "ui-library:dev": "pnpm --filter @cube-frontend/ui-library storybook",
    "ui-library:build": "pnpm --filter @cube-frontend/ui-library build-storybook",
    "ui-library:serve": "pnpm --filter @cube-frontend/ui-library serve-storybook",
    "web-app:dev": "pnpm --filter @cube-frontend/web-app dev",
    "web-app:build": "pnpm --filter @cube-frontend/web-app build",
    "web-app:preview": "pnpm --filter @cube-frontend/web-app preview",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
